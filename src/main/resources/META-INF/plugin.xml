<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ngjackin.knitplugin</id>
    <name>knit-plugin</name>
    <vendor>ngjackin</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

<!--    <resource-bundle>messages.MyBundle</resource-bundle>-->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.ngjackin.knitplugin.toolWindow.MyToolWindowFactory" id="KnitDI"/>
        <postStartupActivity implementation="com.github.ngjackin.knitplugin.startup.MyProjectActivity" />
        
        <!-- Services -->
        <projectService serviceImplementation="com.github.ngjackin.knitplugin.services.CircularDependencyService"/>
        
        <!-- Knit DI Plugin Extensions - With Navigation -->
        
        <!-- Navigation and Documentation -->
        <codeInsight.lineMarkerProvider language="kotlin" implementationClass="com.github.ngjackin.knitplugin.markers.KnitNavigationLineMarkerProvider"/>
        <lang.documentationProvider language="kotlin" implementationClass="com.github.ngjackin.knitplugin.documentation.KnitDocumentationProvider"/>
        
        <!-- Basic highlighting (K2-compatible) -->
        <annotator language="kotlin" implementationClass="com.github.ngjackin.knitplugin.annotator.KnitTextBasedAnnotator"/>
        
        <!-- Advanced highlighting with circular dependency detection -->
        <annotator language="kotlin" implementationClass="com.github.ngjackin.knitplugin.annotator.KnitAnnotator"/>
        
        <!-- Inspections -->
        <localInspection language="kotlin" 
                         implementationClass="com.github.ngjackin.knitplugin.inspection.KnitDependencyInspection"
                         displayName="Knit Dependency Injection Issues"
                         groupName="Knit Dependency Injection"
                         enabledByDefault="true"
                         level="WARNING"/>
                         
        <localInspection language="kotlin" 
                         implementationClass="com.github.ngjackin.knitplugin.inspection.KnitCircularDependencyInspection"
                         displayName="Knit Circular Dependencies"
                         groupName="Knit Dependency Injection"
                         enabledByDefault="true"
                         level="ERROR"/>
                         
        <localInspection language="kotlin" 
                         implementationClass="com.github.ngjackin.knitplugin.inspection.KnitUnusedProviderInspection"
                         displayName="Knit Unused Providers"
                         groupName="Knit Dependency Injection"
                         enabledByDefault="true"
                         level="WARNING"/>
                         
        <localInspection language="kotlin" 
                         implementationClass="com.github.ngjackin.knitplugin.inspection.KnitMissingProviderInspection"
                         displayName="Knit Missing Providers"
                         groupName="Knit Dependency Injection"
                         enabledByDefault="true"
                         level="ERROR"/>
        
        <!-- Inlay hints with circular dependency warnings -->
        <codeInsight.inlayProvider language="kotlin"
                                   implementationClass="com.github.ngjackin.knitplugin.inlayhints.KnitInlayHintsProvider"/>
    </extensions>
</idea-plugin>
